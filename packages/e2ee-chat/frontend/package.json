{
  "name": "@app/chat-e2ee",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --port 5181",
    "build": "tsc -p tsconfig.json && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "migrate": "bash -lc 'set -euo pipefail; INF=../infra; MIG=\"$INF/supabase/migrations\"; mkdir -p \"$MIG\"; TS=$(date +%Y%m%d%H%M%S); cp \"$INF/schema.sql\" \"$MIG/${TS}_init.sql\"; cd \"$INF\"; pnpx supabase db push'",
    "migrate:reset": "bash -lc 'set -euo pipefail; INF=../infra; MIG=\"$INF/supabase/migrations\"; rm -rf \"$MIG\"; mkdir -p \"$MIG\"; TS=$(date +%Y%m%d%H%M%S); cp \"$INF/schema.sql\" \"$MIG/${TS}_init.sql\"; cd \"$INF\"; supabase db push'",
    "supabase:init": "cd ../infra && pnpx supabase init",
    "supabase:link": "cd ../infra && pnpx supabase link",
    "supabase:start": "cd ../infra && pnpx supabase start",
    "supabase:stop": "cd ../infra && pnpx supabase stop",
    "supabase:status": "cd ../infra && pnpx supabase status",
    "supabase:reset": "cd ../infra && pnpx supabase db reset",
    "supabase:db:pull": "cd ../infra && pnpx supabase db pull",
    "supabase:db:push": "cd ../infra && pnpx supabase db push",
    "fmt": "prettier --write .",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@crypto/sqlite": "workspace:*",  
    "@crypto/interface": "workspace:*",
    "@crypto/password": "workspace:*",
    "@crypto/webauthn": "workspace:*",
    "@heroicons/react": "^2.2.0",
    "@journeyapps/wa-sqlite": "^1.3.1",
    "@powersync/common": "^1.38.1",
    "@powersync/react": "^1.7.4",
    "@powersync/web": "^1.26.2",
    "@supabase/supabase-js": "^2.45.0",
    "libsodium-wrappers-sumo": "^0.7.13",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/libsodium-wrappers-sumo": "^0.7.8",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "@vitejs/plugin-react": "5.0.2",
    "autoprefixer": "^10.4.19",
    "jsdom": "26.1.0",
    "postcss": "^8.4.41",
    "tailwindcss": "4.1.13",
    "typescript": "^5.5.4",
    "vite": "7.1.5",
    "vite-plugin-top-level-await": "^1.4.4",
    "vite-plugin-wasm": "^3.4.1",
    "vitest": "3.2.4",
    "@playwright/test": "^1.50.0",
    "dotenv": "^16.4.7"
  }
}
